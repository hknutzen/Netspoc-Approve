#
# Description:
#
# $Id$


DIR=/home/diamonds
POLICYDB=$DIR/netspoc
STATUS=$DIR/status
POLICY=$(basename $(readlink $POLICYDB/current))
CODE=$POLICYDB/$POLICY/code

error () { echo "Error: $1"; exit 1; }
missing () { echo $1; }

cd $CODE || error 
for device in * ; do
    file=$STATUS/$device
    if [ ! -r $file ] ; then
	missing $device
	continue
    fi
    case $(cut -d';' -f4 $file) in
	OK|\*\*\*WARNINGS\*\*\*) ;;
	*)
	    missing $device
	    continue
    esac
    approved=$(cut -d';' -f3 $file)
    last=$approved
    anum=$(echo $approved | sed 's/[^0-9]//g')
    case $(cut -d';' -f13 $file) in
	UPTODATE)
	    compared=$(cut -d';' -f14 $file)
	    cnum=$(echo $compared | sed 's/[^0-9]//g')
	    [ $cnum -gt $anum ] && last=$compared
	    ;;
    esac
    
    [ $last = $POLICY ] && continue

    lcode=$POLICYDB/$last/code/$device
    
    if [ -f $lcode ] ; then 
	diff -I 'Generated by' -q $lcode $CODE/$device > /dev/null
    elif [ -f $lcode.gz ] ; then
	zcat $lcode.gz | diff -I 'Generated by' -q - $CODE/$device > /dev/null
    else
	error "Missing $lcode"
    fi || 
    missing $device
done
